<rocket-emitter emits="banner_1" label="1 Banner" order={{ section.order }}>
    {% if section.params.resource.ids | length or isPreview or isEditing %}
        <banners
            class="banner-1 {{ "#{section.section_alias}-#{section.order}" }}"
            section="banner-1"
            custom-class="flex"
            :ids="{{ section.params.resource.ids | json_encode }}"
            :carousel="false"
            :quantity="1"
            :dimensions="{{ section.params.resource.dimensions | json_encode }}"
            :first-banner="{{ section.params.resource.first_banner | json_encode }}"
        ></banners>
    {% endif %}
</rocket-emitter>
